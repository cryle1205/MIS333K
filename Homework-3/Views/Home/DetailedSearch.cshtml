@model Le_Crystal_HW3.Models.SearchViewModel

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>Detailed Search</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults" method = "get"> @*get method into DisplaySearchResults method in Controller*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleSearch" class="control-label"></label>
                <input asp-for="TitleSearch" class="form-control" />
                <span asp-validation-for="TitleSearch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionSearch" class="control-label"></label>
                <input asp-for="DescriptionSearch" class="form-control" />
                <span asp-validation-for="DescriptionSearch" class="text-danger"></span>
            </div>
           <div class="form-group"> @*drop down for a enum property*@
                <label asp-for="RatingSearch" class="control-label"></label>
                <select asp-for="RatingSearch" asp-items="Html.GetEnumSelectList<Rating>()" class="form-control">
                <option selected="selected" value="">All Ratings</option>
                </select>
                <span asp-validation-for="RatingSearch" class="text-danger"></span>
           </div>
           <div class="form-group"> @*drop down for a navigational property*@
                <label asp-for="SelectedGenreID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedGenreID, (SelectList)ViewBag.AllGenres, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="UserNumRating" class="control-label"></label>
                <input asp-for="UserNumRating" class="form-control" />
                <span asp-validation-for="UserNumRating" class="text-danger"></span>
            </div>
            <div class="form-group"> @*Radio buttons*@
                <label asp-for="UserRatingSearch" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="UserRatingSearch" value="@UserRating.LessThan"/> Less Than<br />
                <input type="radio" class="radio" asp-for="UserRatingSearch" value="@UserRating.GreaterThan"/> Greater Than<br />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDateSearch" class="control-label"></label>
                <input asp-for="ReleaseDateSearch" class="form-control" />
                <span asp-validation-for="ReleaseDateSearch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

